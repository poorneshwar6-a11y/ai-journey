def calc(a,b,operator):
    if(operator==1):
        return a+b
    if(operator==2):
        return a-b
    if(operator==3):
        return a*b
    if(operator==4):
        return a/b
operator=int(input("enter\n 1 for addition \n 2 for substraction\n 3 for multiplication\n 4 for division::"))
a=int(input("enter number 1:"))
b=int(input("enter number 2:"))
print("result is:",calc(a,b,operator))
